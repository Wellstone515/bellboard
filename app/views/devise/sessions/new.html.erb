<div class="sign-in">
  <div class="sign-in__transparent">

  <div class="row">
    <div class="col s4 m4 l4"></div>
    <div class="col s4 m4 l4 sign-in__box">

      <h2 class="sign-in__title">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="">
        <%= f.label :email, class: "grey-text text-lighten-4" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "off", class: "grey lighten-4" %>
      </div>

      <div class="sign-in__password">
        <%= f.label :password, class: "grey-text text-lighten-4" %><br />
        <%= f.password_field :password, autocomplete: "off", class: "grey lighten-4" %>
      </div>

<!--       <% if devise_mapping.rememberable? %>
      <div class="field sign_in_up_text">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "log_in_text" %>
      </div>
      <% end %> -->

      <div class="">
        <button class="col l12 btn waves-effect waves-light sign-in__button" type="submit" name="action">
          ログイン
          <%= f.submit "" %>
          <i class="material-icons right">forward</i>
        </button>
      </div>
      <% end %>





      <%= link_to new_registration_path(resource_name) do %>
        <div class="col l12 btn waves-effect waves-light sign-in__button">
          アカウント登録する
          <i class="material-icons right">forward</i>
        </div>
      <% end %>

      <%= link_to user_twitter_omniauth_authorize_path do %>
        <div class="col l12 btn waves-effect waves-light  blue lighten-1 sign-in__button">
          <i class="fab fa-twitter"></i>
          <span class="sign-up__button__capitalize">twitterアカウントでログイン</span>
        </div>
      <% end %>

      <%= link_to user_google_oauth2_omniauth_authorize_path do %>
        <div class="col l12 btn waves-effect waves-light  blue darken-4 sign-in__button">
          <i class="fab fa-google"></i>
          <span class="sign-up__button__capitalize">googleアカウントでログイン</span>
        </div>
      <% end %>



    </div>
  </div>

  </div>
</div>

